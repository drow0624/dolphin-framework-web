<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.ArticleMapper">

    <resultMap id="articleMap" type="com.example.entity.Article">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="author" jdbcType="VARCHAR" property="author"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>


    <insert id="add" parameterType="com.example.entity.Article">
        insert into article
        (name,content,author,create_time)
        values
        (#{article.name},#{article.content},#{article.author},#{article.createTime})
    </insert>

    <select id="findAll" resultMap="articleMap">
      select  * from  article
    </select>

</mapper>